{
  "name": "pydah-student-database-backend",
  "version": "1.0.0",
  "description": "Backend for Pydah Student Database Management System with Dynamic Form Builder",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "init-db": "node scripts/initDatabase.js",
    "seed-staging-admin": "node scripts/seedStagingAdmin.js",
    "init-settings": "node scripts/init_settings_table.js",
    "migrate-academic-stage": "node scripts/addAcademicStageColumns.js",
    "migrate-document-requirements": "node scripts/create_document_requirements_table.js",
    "migrate-supabase-to-mysql": "node scripts/migrate_supabase_to_mysql.js",
    "add-performance-indexes": "node scripts/runPerformanceIndexes.js",
    "verify-db": "node scripts/verifyDatabase.js",
    "run-migrations": "node -e \"const { runMigrations } = require('./scripts/runMigrations'); runMigrations().then(() => process.exit(0)).catch(err => { console.error(err); process.exit(1); });\""
  },
  "keywords": [
    "student",
    "database",
    "forms",
    "qr-code",
    "admin-panel"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.0",
    "node-cron": "^4.2.1",
    "nodemailer": "^6.10.1",
    "pdfkit": "^0.14.0",
    "qrcode": "^1.5.3",
    "razorpay": "^2.9.2",
    "sharp": "^0.34.5",
    "uuid": "^9.0.1",
    "web-push": "^3.6.7",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
